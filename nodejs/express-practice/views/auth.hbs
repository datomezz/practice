<div class="row">
  <div class="col s6 offset-s3 p-0">
    <ul class="tabs">
      <li class="tab col s6"><a class="active" href="#login">Login</a></li>
      <li class="tab col s6"><a href="#registration">Registration</a></li>
    </ul>
  </div>
  <form id="login" class="col s6 offset-s3 auth__container p-0" action="/auth/login" method="POST">
    <div class="input-field col s12">
      <input placeholder="username" id="lname" name="lname" type="text" class="validate" required>
      <label for="lname">Username</label>
    </div>
    <div class="input-field col s12">
      <input placeholder="Password" id="lpassword" name="lpassword" type="password" class="validate" required>
      <label for="lpassword">Password</label>
    </div>
    <button type="submit" name="lsubmit" class="auth__button waves-effect waves-light btn">Click</button>
  </form>
  <form id="registration" class="col s6 offset-s3 auth__container p-0">
    <div class="input-field col s12">
      <input placeholder="Username" id="rname" name="rname" type="text" class="validate" required>
      <label for="rname">Username</label>
    </div>
    <div class="input-field col s12">
      <input placeholder="Email" id="rmail" name="rmail" type="email" class="validate" required>
      <label for="rmail">Email</label>
    </div>
    <div class="input-field col s12">
      <input placeholder="Password" id="rpassword" name="rpassword" type="password" class="validate" required>
      <label for="rpassword">Password</label>
    </div>
    <button type="submit" name="rsubmit" class="auth__button waves-effect waves-light btn">Click</button>
  </form>
</div>