<h1>POST ID : {{content.id}}</h1>
<form class="row" action="/add/re-write" method="POST">
    <div class="col s6">
        <div class="row justify-content-center">
            <div class="input-field col s12">
                <input name="name" type="text" id="name-input" class="autocomplete validate" value="{{content.name}}"required>
                <label for="name-input">Name</label>
            </div>
            <div class="input-field col s12">
                <input name="surname" type="text" id="surname-input" class="autocomplete validate" value="{{content.surname}}" required>
                <label for="surname-input">Surname</label>
            </div>
            <div class="input-field col s3">
                <button class="btn waves-effect waves-light" type="submit" name="add-submit">Re-Write</button>
            </div>
            <input type="hidden" name="id" value="{{content.id}}">
        </div>
    </div>
</form>